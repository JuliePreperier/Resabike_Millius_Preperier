extends layout_superadmin

block content

    h3 Nouvelle ligne
        form(action='/superadmin/superadmin_lignes', method='POST')
            input(type='text', name='fromStation', placeholder='Entrez la station de départ', class="autocomplete recherche")
            br
            input(type='text', name='toStation', placeholder='Entrez la station arrivée', class="autocomplete recherche")
            br
            input(type='text', name='id_zone', placeholder='Entrez zone concernée')
            .input-field.col.s12
                select
                    option(value="", disabled="", selected="") Choose your option
                    option(value="1") Option 1
                    option(value="2") Option 2
                    option(value="3") Option 3
                label Materialize Select
            br
            button.btn.waves-effect.waves-light(type="submit", name="action") Enregistrer
            br
            br
    h3 Lignes existantes
        each line in lines
            .zone
                input(type='text', value=line.lineName)
                button.btn.waves-effect.waves-light(onclick='deleteLine('+line.id_line+')') delete