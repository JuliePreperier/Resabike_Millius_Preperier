extends layout_chauffeur

block content
    h3 Réservations
        table.highlight
            thead
                tr
                    th Date
                    th Zone
                    th Ligne
                    th Nom groupe
                    th Station-départ
                    th Station-arrivée
                    th Nombre vélos

            tbody
                each line in lines
                    tr
                        .zone
                            td
                                value="date"
                            td
                                value=line.zoneLine.zoneName
                            td
                                value=line.lineName
                            td
                                value="nom groupe"
                            td
                                value=line.fromStation
                            td
                                value=line.toStation
                            td
                                value="nombre vélos"