doctype html
html
    head

        //Import Google Icon Font
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        //Import materialize.css
        link(type='text/css', rel='stylesheet', href='/stylesheets/materialize.min.css',  media='screen,projection')
        //Let browser know website is optimized for mobile
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

    body(bgcolor="#fffde7")
        nav.amber.lighten-1
            div.nav-wrapper
                a.brand-logo(href="#") ResaBike
                a.button-collapse(href="#", data-activates="mobile-demo")
                    i.material-icons menu
                ul#nav-mobile.right.hide-on-med-and-down
                    li
                        a(href="/chauffeur") Réservations
                    li
                        a(href="/login") Logout
                ul#mobile-demo.side-nav
                    li
                        a(href="/chauffeur") Réservations
                    li
                        a(href="/login") Logout
        block content


        //Import jQuery before materialize.js
        script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')

        //autocompletion script
        script(src='/javascripts/apiCompletion.js')
        link(href='/stylesheets/jquery-ui.min.css', rel='stylesheet')
        script(src='/javascripts/selectquery.js')
        //Module line
        script(type='text/javascript', src='/javascripts/superadminquery.js')
        script(src='/javascripts/search-it.js')
