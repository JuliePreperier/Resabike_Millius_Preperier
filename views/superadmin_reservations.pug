extends layout_superadmin

block content
    h3 Rechercher
        form(action='/superadmin/superadmin_reservations', method='GET')
            .input-field.col.s12
                select(name='id_zone')
                    option(value="", disabled="", selected="") Choisir zone concernée
                    each zone in zones
                        .zone
                            option(value=zone.id_zone)
                                label=zone.zoneName
            .input-field.col.s12
                select(name='id_line')
                    option(value="", disabled="", selected="") Choisir ligne concernée
                    each line in lines
                        .line
                            option(value=line.id_line)
                                label=line.lineName

            br
            button.btn.waves-effect.waves-light(type="submit", name="action") Rechercher
            br
            br
    h3 Réservations
    table.highlight
        thead
            tr
                th Date
                th Zone
                th Ligne
                th Nom groupe
                th Station-départ
                th Station-arrivée
                th Nombre vélos
                th Confirmation?

        tbody
            each line in lines
                tr
                    .zone
                        td
                            value="date"
                        td
                            value=line.zoneLine.zoneName
                        td
                            value=line.lineName
                        td
                            value="nom groupe"
                        td
                            value=line.fromStation
                        td
                            value=line.toStation
                        td
                            value="nombre vélos"
                        td
                            input.filled-in(type="checkbox", checked="checked", id="filled-in-box", disabled="disabled")

