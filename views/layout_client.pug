doctype html
html
    head

        //Import Google Icon Font
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        //Import materialize.css
        link(type='text/css', rel='stylesheet', href='/stylesheets/materialize.min.css',  media='screen,projection')
        //Let browser know website is optimized for mobile
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

    body(bgcolor="#fffde7")
        ul#dropdown1.dropdown-content
            li
                a.font-bold(href="?clang=fr").lang-fr.lang-button FR
            li
                a.font-bold(href="?clang=en").lang-en.lang-button EN
            li
                a.font-bold(href="?clang=de").lang-de.lang-button DE
        nav.amber.lighten-1
            div.nav-wrapper
                a.brand-logo(href="#") ResaBike
                a.button-collapse(href="#", data-activates="mobile-demo")
                    i.material-icons menu
                ul#nav-mobile.right.hide-on-med-and-down
                    li
                        a(href="/client/client_about") #{translation.LAYOUTAPROPOS}
                    li
                        a(href="/login") Login
                    li
                        a.dropdown-button(href="#!", data-activates="dropdown1") #{translation.LANGUEMENU}
                            i.material-icons.right arrow_drop_down
                ul#mobile-demo.side-nav
                    li
                        a.font-bold(href="?clang=fr").lang-fr.lang-button FR
                    li
                        a.font-bold(href="?clang=en").lang-en.lang-button EN
                    li
                        a.font-bold(href="?clang=de").lang-de.lang-button DE
                    li
                        a(href="/client/client_about") #{translation.LAYOUTAPROPOS}
                    li
                        a(href="/login") Login
        block content


        //Import jQuery before materialize.js
        script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')
        script(type='text/javascript', src='/javascripts/clientquery.js')
        //autocompletion script
        script(src='/javascripts/dbCompletion.js')
        link(href='/stylesheets/jquery-ui.min.css', rel='stylesheet')
        script(src='/javascripts/selectquery.js')
        //Module line
        script(src='/javascripts/search-it.js')

